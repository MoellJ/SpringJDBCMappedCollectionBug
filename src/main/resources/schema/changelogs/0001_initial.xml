<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="bug_and_workaround" author="me">
        <createTable tableName="queue">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="INT"/>
        </createTable>

        <createTable tableName="person">
            <column name="queue_id" type="VARCHAR(255)"/>
            <column name="position_in_queue" type="INT"/>

            <column name="id" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="skill">
            <column name="queue_id" type="VARCHAR(255)"/>
            <column name="person_id" type="VARCHAR(255)"/>
            <column name="position_in_queue" type="INT"/>

            <column name="skill_idx" type="INT"/> <!-- This is only used by the workaround example -->

            <column name="name" type="VARCHAR(255)"/>
            <column name="level" type="VARCHAR(255)"/>
        </createTable>

    </changeSet>

    <changeSet id="set_example" author="me">

        <createTable tableName="city">
            <column name="name" type="VARCHAR(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="INT"/>
        </createTable>

        <createTable tableName="street">
            <column name="city_name" type="VARCHAR(255)"/>

            <column name="name" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="house">
            <column name="streetname" type="VARCHAR(255)"/>

            <column name="number" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>